@model SachOnline.Models.Book

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style type="text/css">
    img {
        width: 200px;
        margin-bottom: 20px;
    }
    h3,h4{
        color:red;
        font-weight:bold;
    }
</style>

<h2>XÁC NHẬN THÔNG TIN CẦN XÓA</h2>

<h3>Bạn quyết định xóa quyển sách này?</h3>
<h4>@Html.Raw(ViewBag.ThongBao) </h4>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @*@Html.DisplayNameFor(model => model.Title)*@
            Tên sách:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        @*<dt>
            @Html.DisplayNameFor(model => model.AuthorID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AuthorID)
        </dd>*@

        <dt>
            @* @Html.DisplayNameFor(model => model.Description)*@
            Mô tả:
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.Description)*@
            @Html.Raw(Model.Description.ToString().Replace("\n", "</p><p>&nbsp&nbsp&nbsp&nbsp&nbsp"))
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.Images)*@
            Ảnh bìa:
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.Images)*@
            <img src="~/Images/@Model.Images" alt="@Model.Title" />
        </dd>

        <dt>
            @* @Html.DisplayNameFor(model => model.Published)*@
            Ngày cập nhật:
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.Published)*@
            @Html.FormatValue(Model.Published, "{0:dd/MM/yyyy}")
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.ViewCount)*@
            Số lượng bán:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ViewCount)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.Price)*@
            Giá bán:
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.Price)*@
            @Html.FormatValue(Model.Price, "{0:#,##0}")VNĐ
        </dd>



        <dt>
            @*@Html.DisplayNameFor(model => model.CategoryID)*@
            Chủ đề:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>







        <dt>
            @*@Html.DisplayNameFor(model => model.NhaXuatBanID)*@
            Nhà xuất bản:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NhaXuatBan.NhaXuatBanName)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="XÓA" class="btn btn-default" /> |
            @Html.ActionLink("VỀ TRANG QUẢN LÝ SÁCH", "Index")
        </div>
    }
</div>
