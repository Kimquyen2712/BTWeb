@model SachOnline.Models.ADMIN

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>ĐIỀU CHỈNH THÔNG TIN NHÂN VIÊN</h2>
@*Thêm thuộc tính cho form để upload ảnh*@
@using (Html.BeginForm("Edit", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @*@Html.HiddenFor(model => model.BookID)*@

    <div class="form-group">
        @*    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })*@

        <label class="control-label col-md-2">Mã nhân viên:</label>

        <div class="col-md-10">
            @*Chỉ hiển thị mã sách không cho sửa*@
            @*@Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })*@
            <input type="text" size="70" name="sMaAdmin" value="@Model.MaAdmin" readonly />

        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Tên nhân viên:</label>
        <div class="col-md-10">

            <input type="text" size="70" name="sHoTen" value="@Model.HoTen" required />

        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Địa chỉ nhân viên:</label>
        <div class="col-md-10">

            <input type="text" size="70" name="sDiaChi" value="@Model.DiaChi" required />

        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Điện thoại nhân viên:</label>
        <div class="col-md-10">

            <input type="text" size="70" name="sDienThoai" value="@Model.DienThoai" required />

        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Tên đăng nhập:</label>
        <div class="col-md-10">

            <input type="text" size="70" name="sTenDN" value="@Model.TenDN" required />

        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Mật khẩu:</label>
        <div class="col-md-10">

            <input type="text" size="70" name="sMatKhau" value="@Model.MatKhau" required />

        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Email:</label>
        <div class="col-md-10">

            <input type="text" size="70" name="sEmail" value="@Model.Email" required />

        </div>
    </div>



    <div class="form-group">
        @*@Html.LabelFor(model => model.Published, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Published, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Published, "", new { @class = "text-danger" })
            </div>*@
        <label class="control-label col-md-2">Ngày sinh:</label>
        <div class="col-md-10">
            <input type="datetime" name="sNgaySinh" required value="@Convert.ToDateTime(Model.NgaySinh)" />
        </div>
    </div>

    <div class="form-group">
        @*@Html.LabelFor(model => model.CategoryID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CategoryID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
            </div>*@
        <label class="control-label col-md-2">Quyền:</label>
        <div class="col-md-10">
            @*Hiển thị ViewBag.MaCD vào dropdownlist*@
            @Html.DropDownList("Quyen")
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="LƯU THÔNG TIN" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ NHÂN VIÊN", "Index")
</div>
