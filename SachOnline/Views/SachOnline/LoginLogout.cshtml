@using SachOnline.Models
@{
    KHACHHANG kh = (KHACHHANG)Session["TaiKhoan"];
}

@*Tùy chọn hiển thị*@
@if (Session["TaiKhoan"] == null)//Giao dien Logout
{
    <li><a href="~/User/Dangky"><span class="glyphicon glyphicon-user"></span>Đăng ký</a></li>
    <li><a href="~/User/Dangnhap?id=1"><span class="glyphicon glyphicon-log-in"></span>Đăng nhập</a></li>
}
else //Giao dien Logout
{
    <li><a href="#"><span class="glyphicon glyphicon-user"></span>Xin chào: @kh.HoTen</a></li>
    <li><a href="@Url.Action("Dangxuat","User")"><span class="glyphicon glyphicon-log-in"></span>Đăng xuất</a></li>

}