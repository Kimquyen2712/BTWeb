<h3 class="text-center">SÁCH BÁN NHIỀU</h3>
<div class="container">
    <div class="row">
        @foreach (var sach in Model)
        {
            <div class="col-md-3">
                <div class="media">
                    <div class="media-left">
                        <a href="#">
                            <img class="media-object imgsachbannhieu" src="~/Images/@sach.Images" alt="Ảnh sách">
                        </a>
                    </div>
                    <div class="media-body">
                        <h4 class="media-heading">@sach.Title</h4>
                        <p class="description-limit">
                            @Html.Raw(@sach.Description.Length > 100 ? sach.Description.Substring(0, 200) + "..." : sach.Description)
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

