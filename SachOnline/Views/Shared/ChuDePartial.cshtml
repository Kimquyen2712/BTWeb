@model IEnumerable<SachOnline.Models.Category>





<ul class="list-group" style="padding: 2px; font-size: 14px; height: 200px; overflow-y: auto; background-color: rgba(0, 0, 0, 0); border: none;">
    <li class="list-group-item active text-white" style="font-weight: bold; text-align: center; padding: 8px; background-color: rgba(0, 0, 0, 0.05); border: none;">-- BỘ SƯU TẬP --</li>

    @foreach (var item in Model)
    {
        <a href="@Url.Action("chudecss", "SachOnline", new { iMaCD = item.CategoryID })" class="list-group-item" style="padding: 8px; background-color: rgba(0, 0, 0, 0); border: none;">
            @item.CategoryName
        </a>
    }
</ul>




